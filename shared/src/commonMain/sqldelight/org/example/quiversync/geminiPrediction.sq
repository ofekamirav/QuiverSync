CREATE TABLE GeminiPredictionEntity (
    surfboardID TEXT NOT NULL,
    forecastDate TEXT NOT NULL,
    forecastLatitude REAL NOT NULL,
    forecastLongitude REAL NOT NULL,
    score INTEGER NOT NULL,
    description TEXT NOT NULL,
    UNIQUE(forecastDate, forecastLatitude, forecastLongitude)
    );

DELETE_BEST_MATCH_FOR_DATE:
DELETE FROM GeminiPredictionEntity
WHERE forecastDate = ?
  AND forecastLatitude = ?
  AND forecastLongitude = ?;

INSERT_BEST_MATCH:
INSERT OR REPLACE INTO GeminiPredictionEntity(
    surfboardID, forecastDate, forecastLatitude, forecastLongitude, score , description
) VALUES (  ?, ?, ?,?,? ,?);

GET_BEST_MATCH:
SELECT * FROM GeminiPredictionEntity
WHERE forecastDate = ?
  AND forecastLatitude = ?
  AND forecastLongitude = ?
LIMIT 1;

GET_PREDICTIONS_BY_DATE:
SELECT * FROM GeminiPredictionEntity
WHERE forecastDate = ?;

deleteMatchesBySpot:
DELETE FROM GeminiPredictionEntity
WHERE forecastLatitude = ?
  AND forecastLongitude = ?;

GET_TOP_MATCH_BY_USER_SPOT_AND_DATE:
SELECT * FROM GeminiPredictionEntity
WHERE forecastDate = ?
  AND forecastLatitude = ?
  AND forecastLongitude = ?
ORDER BY score DESC
LIMIT 1;
